@model string
<link href="~/css/TrangThaiThanhToanVNPAY.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Thanh toán không thành công";
}

<div class="payment-container">
    <div class="payment-card">
        <div class="payment-header failed">
            <div class="payment-icon failed">
                <i class="fas fa-times-circle"></i>
            </div>
            <h1 class="payment-title" style="color: white;">Thanh toán không thành công</h1>
            <p class="payment-subtitle">😔 Đã xảy ra sự cố trong quá trình thanh toán</p>
        </div>

        <div class="payment-body">
            @if (!string.IsNullOrEmpty(Model))
            {
                <div class="error-message">
                    <div class="error-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Chi tiết lỗi
                    </div>
                    <p class="error-text">@Model</p>
                </div>
            }
            else
            {
                <div class="error-message">
                    <div class="error-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Lỗi thanh toán
                    </div>
                    <p class="error-text">
                        Giao dịch không thể hoàn tất. Vui lòng kiểm tra thông tin thanh toán và thử lại.
                    </p>
                </div>
            }

            <div class="order-info">
                <div class="order-id">
                    <i class="fas fa-info-circle"></i>
                    Giỏ hàng của bạn vẫn được lưu giữ
                </div>
                <div class="order-details">
                    <div class="detail-item">
                        <i class="fas fa-shield-alt"></i>
                        <div>
                            <strong>Bảo mật:</strong><br>
                            Thông tin an toàn 100%
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-undo"></i>
                        <div>
                            <strong>Hoàn tiền:</strong><br>
                            Tự động nếu đã trừ tiền
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center" style="margin: var(--spacing-lg) 0; color: var(--gray-color);">
                <p>
                    <i class="fas fa-hand-holding-heart" style="color: var(--primary-color); margin-right: 8px;"></i>
                    Đừng lo lắng! Bạn có thể thử lại hoặc chọn phương thức thanh toán khác.
                </p>
                <p>Đội ngũ Food BCTECH luôn sẵn sàng hỗ trợ bạn 24/7.</p>
            </div>

            <div class="payment-actions">@*
                <a href="javascript:history.back()" class="payment-btn primary">
                    <i class="fas fa-redo-alt"></i>
                    Thử thanh toán lại
                </a>
                
                <a asp-controller="ThanhToan" asp-action="Create" class="payment-btn outline">
                    <i class="fas fa-credit-card"></i>
                    Đổi phương thức thanh toán
                </a>*@
                <a asp-controller="GioHang" asp-action="Index" class="payment-btn secondary">
                    <i class="fas fa-shopping-cart"></i>
                    Quay lại giỏ hàng
                </a>
                <a asp-controller="Home" asp-action="Index" class="payment-btn secondary">
                    <i class="fas fa-home"></i>
                    Về trang chủ
                </a>
            </div>

            <div class="support-info">
                <h5 class="support-title">
                    <i class="fas fa-question-circle"></i>
                    Cần hỗ trợ ngay lập tức?
                </h5>
                <p style="margin-bottom: var(--spacing-md); color: var(--gray-color);">
                    Liên hệ với chúng tôi để được hỗ trợ nhanh chóng:
                </p>
                <ul class="support-list">
                    <li>
                        <i class="fas fa-phone-alt"></i>
                        <span>Hotline: <strong>(0254) 3.583.545</strong> (24/7)</span>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <span>Email: <strong>info@bctech.edu.vn</strong></span>
                    </li>
                    <li>
                        <i class="fab fa-facebook-messenger"></i>
                        <span>Chat Facebook: <strong><br />Trường Cao đẳng Kỹ thuật Công nghệ Bà Rịa - Vũng Tàu</strong></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>