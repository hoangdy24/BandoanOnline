<form method="post" action="@Url.Action("ThanhToanTinDung", "ThanhToan", new { id = Model.MaDonHang })">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="CardNumber">Số thẻ tín dụng</label>
        <input type="text" class="form-control" id="CardNumber" name="CardNumber" placeholder="Nhập số thẻ tín dụng" required />
    </div>

    <div class="form-group">
        <label for="ExpirationDate">Ngày hết hạn (MM/YY)</label>
        <input type="text" class="form-control" id="ExpirationDate" name="ExpirationDate" placeholder="MM/YY" required />
    </div>

    <div class="form-group">
        <label for="CVC">Mã CVC</label>
        <input type="text" class="form-control" id="CVC" name="CVC" placeholder="Nhập mã CVC" required />
    </div>

    <button type="submit" class="btn btn-success">Thanh toán</button>
</form>
