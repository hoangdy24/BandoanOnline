@using QlW_BandoanOnline.Models.ViewModels
@model ResetMatKhauViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<link href="~/css/Dangnhap.css" rel="stylesheet" />
<br />
<div class="container">
    <div class="auth-container">
        <div class="form-container" style="max-height: 500px;">
            <h2 class="page-title">Đặt lại mật khẩu</h2>
            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu mới</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu mới">
                    <span asp-validation-for="Password" class="error-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu mới">
                    <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                </div>

                <button type="submit" class="btn btn-submit">Đặt lại mật khẩu</button>
            </form>
            <div class="text-center mt-3" style="padding-top: 15px;">
                <a asp-action="Dangnhap" asp-controller="Taikhoan" class="btn-link">
                    Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}